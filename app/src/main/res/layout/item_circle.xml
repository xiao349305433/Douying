<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ngl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_circle_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/avatar" />

        <TextView
            android:id="@+id/item_circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="用户一"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"

            />
        <TextView
            android:id="@+id/item_circle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23分钟前"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <example.com.douying.view.ExpandableTextView
        android:id="@+id/item_circle_expandabletv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        ngl:contentTextColor="@color/white"
        />
     <com.jaeger.ninegridimageview.NineGridImageView
         android:id="@+id/item_circle_images"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         ngl:imgGap="3dp"
         ngl:showStyle="grid"
         app:singleImgSize="120dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:visibility="gone"
         ></com.jaeger.ninegridimageview.NineGridImageView>
    <cn.jzvd.MyJZVideoPlayerStandard
        android:id="@+id/item_circle_video"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        ></cn.jzvd.MyJZVideoPlayerStandard>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/item_circle_like"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_circle_like"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/item_circle_liketv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="赞"
            android:gravity="center"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_circle_reply"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/item_circle_comment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="评论"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
