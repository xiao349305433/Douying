<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/item_model_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/tianjiada"
        android:padding="10dp"
        />

    <ImageView
        android:id="@+id/item_model_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/item_model_img"
        android:layout_alignParentTop="true"
        android:src="@mipmap/xiaoguanbi1"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/item_model_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_model_img"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />
</android.support.constraint.ConstraintLayout>