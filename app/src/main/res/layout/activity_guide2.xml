<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gg">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <example.com.douying.view.BackButton style="@style/BackButton" />

        <TextView
            android:id="@+id/guide2_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/guide2_img1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/swtich1002"
            android:padding="3dp"

            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/guide2_img2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/swtich1008"
            android:padding="3dp"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/guide2_img3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/swtich1005"
            android:padding="3dp"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/guide2_img4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/swtich1006"
            android:padding="3dp"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择素材"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选取该视频片段进行录制"
        android:textColor="@color/graytv"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>