<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gg"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <example.com.douying.view.BackButton style="@style/BackButton" />

        <TextView
            android:id="@+id/model_ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="新增"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/model_img_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"
                android:saveEnabled="false"
                />

            <ImageView
                android:id="@+id/model_close_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/model_img_1"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/model_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/model_img_1"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-正面"
                />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/model_img_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"
                android:saveEnabled="false"
                />

            <ImageView
                android:id="@+id/model_close_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/model_img_2"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/model_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/model_img_2"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-左侧面"
                />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/model_img_3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"


                />

            <ImageView
                android:id="@+id/model_close_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/model_img_3"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/model_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/model_img_3"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-右侧面"
                />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/model_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        ></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/model_sure"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@mipmap/follw"
        android:text="确认"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

</LinearLayout>