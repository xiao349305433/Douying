<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gg"
    android:orientation="vertical"
    android:padding="10dp">

    <cn.jzvd.MyJZVideoPlayerStandard
        android:id="@+id/item_fg5_mywork_expan1_vd"
        android:layout_width="match_parent"
        android:layout_height="100dp"></cn.jzvd.MyJZVideoPlayerStandard>


    <TextView
        android:id="@+id/item_fg5_mywork_expan1_vdtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我有钱有身材，醉卧的人从这里排到了法国，我拿三百一出和你玩你当我空气啊"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:src="@mipmap/scan" />

        <TextView
            android:id="@+id/item_fg5_mywork_expan1_scannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="450"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/scan" />

        <TextView
            android:id="@+id/item_fg5_mywork_expan1_commentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="450"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/zan" />

        <TextView
            android:id="@+id/item_fg5_mywork_expan1_zannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="99"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收起评论"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/shang" />

    </LinearLayout>

</LinearLayout>