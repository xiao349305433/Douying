<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/item_pointtask_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/icon_pointtask_sgin"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/item_pointtask_taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成一次作品"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/item_pointtask_taskcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分值+100，完成0/1"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/item_pointtask_task"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="去拍摄"
        android:gravity="center"
        android:textColor="@color/pointtask_Orange"
        android:background="@drawable/item_pointtask_shape1"
        android:layout_marginRight="20dp"
        />



</LinearLayout>