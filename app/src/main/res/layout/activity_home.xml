<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/home"
    >
    <ImageView
        android:id="@+id/home_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/menu_close"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/home_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="首页"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/home_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home_tv1"
        android:text="录制"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/home_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home_tv2"
        android:text="圈子"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/home_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home_tv3"
        android:text="消息"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        />
    <TextView
        android:id="@+id/home_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home_tv4"
        android:text="我的"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>