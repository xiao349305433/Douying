<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gg"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <example.com.douying.view.BackButton style="@style/BackButton" />
        <TextView
            android:id="@+id/addmodel_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="标题"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/addmodel_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        />
<android.support.v7.widget.RecyclerView
    android:id="@+id/addmodel_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    ></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/addmodel_img_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"
                android:saveEnabled="false"
                />

            <ImageView
                android:id="@+id/addmodel_close_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/model_img_1"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/addmodel_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addmodel_img_1"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-正面"
                />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/addmodel_img_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"
                android:saveEnabled="false"
                />

            <ImageView
                android:id="@+id/addmodel_close_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/model_img_2"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/addmodel_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addmodel_img_2"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-左侧面"
                />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/addmodel_img_3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"


                />

            <ImageView
                android:id="@+id/addmodel_close_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/model_img_3"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/addmodel_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addmodel_img_3"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-右侧面"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>