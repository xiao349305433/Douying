<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_model_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/item_model_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="编辑"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_model_img_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"
                />

            <ImageView
                android:id="@+id/item_model_close_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/item_model_img_1"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/item_model_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_model_img_1"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-正面"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_model_img_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"
                />

            <ImageView
                android:id="@+id/item_model_close_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/item_model_img_2"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/item_model_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_model_img_2"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-正面"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_model_img_3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/tianjiada"
                android:padding="10dp"
                />

            <ImageView
                android:id="@+id/item_model_close_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/item_model_img_3"
                android:layout_alignParentTop="true"
                android:src="@mipmap/xiaoguanbi1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/item_model_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_model_img_3"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="模型-正面"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
